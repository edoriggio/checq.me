<div class="container mt-5">
  <form id="create_form">
    <div class="form-group">
      <label for="input_name">Mastery Check name</label>
      <input type="text" placeholder="Mastery Name" name="input_name" class="form-control"
      id="input_name" value="<%- current.name ? current.name : ""%>" required />
    </div>

    <div class="form-group">
      <label for="input_description">Mastery Check description</label>
      <input type="text" placeholder="Mastery Description" name="input_description"
      class="form-control" id="input_description" 
      value="<%- current.description ? current.description : ""%>" required />
    </div>

    <div class="form-group">
      <label for="input_duration">Mastery Check duration</label>
      <input type="number" placeholder="Mastery Duration" name="input_duration" class="form-control"
      value="<%- current.appointment_duration ? current.appointment_duration : ""%>"
      id="input_duration" required />
    </div>

    <div class="form-group">
      <label for="github_repo_name">GitHub Repo</label>
      <input type="text" placeholder="organization_name/template_repo" name="github_repo_name" class="form-control"
      value="<%- current.github_repo_name ? current.github_repo_name : ""%>"
      id="github_repo" required />
    </div>

    <% console.log(current) %>

    <div class="form-check">
      <input
        class="form-check-input"
        name="check_available"
        type="checkbox"
        id="check_available"
        <%= current.available == true ? 'checked' : '' %>
      />
      <label class="form-check-label" for="check_available"> Available </label>
    </div>
  </form>

  <% if(current.name) { %>
    <button onclick="edit_mastery()" class="btn btn-primary">Edit Mastery Check</button>
  <% } else { %>
    <button onclick="create_mastery()" class="btn btn-primary">Create Mastery Check</button>
  <% } %>
</div>



<script src="/js/ajax_mastery.js"></script>
<script src="/js/ajax_question.js"></script>
