<div class="container mt-3">
    <h3>Mastery Check List</h3>
    <% collection.forEach(element => { %>
    <div class="card mt-5">
        <div class="card-header">
            Mastery Check
        </div>
        <div class="card-body">
            <h5 class="card-title"><%= element.name %></h5>
            <p class="card-text"><%= element.description %></p>
        </div>
    </div>
    <% }); %>
</div>


<div class="container mt-5">
    <h1>Mastery Check Manager</h1>
    <form action="/manager" method="POST">
        <div class="form-group">
            <label for="input_name">Mastery Check name</label>
            <input required type="text" name="input_name" class="form-control" id="input_name">
        </div>
        <div class="form-group">
            <label for="input_description">Mastery Check description</label>
            <input required type="text" name="input_description" class="form-control" id="input_description">
        </div>
        <div class="form-check">
            <input class="form-check-input" name="check_available" type="checkbox" id="check_available">
            <label class="form-check-label" for="check_available">
                Available
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" name="check_mandatory" type="checkbox" id="check_mandatory">
            <label class="form-check-label" for="check_mandatory">
                Mandatory
            </label>
        </div>
        <button type="submit" class="btn btn-primary">Create Mastery Check</button>
    </form>
</div>